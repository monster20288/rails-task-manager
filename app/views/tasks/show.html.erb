<div class="container">
  <div class="row">
    <div class="col-md-12 mt-5">
      <h1>Tasks Name: <%= @task.title %></h1>
      <div class="alert alert-secondary mt-2 p-4 fs-4" role="alert">
        <%= @task.details %>
      </div>
      <div class="form-check mt-2 mb-2">
        <input class="form-check-input" type="checkbox" value="" id="<%= @task.title %>"
          <%= @task.completed == true ? "checked":"" %>>
          <label class="form-check-label" for="<%= @task.title %>">
            This Task is completed
          </label>
      </div>
      <%= link_to "Back to lists", tasks_path %>
    </div>
  </div>
</div>
